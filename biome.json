{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["@chyzwar/biome-config/react"], 
  "javascript": {
    "jsxRuntime": "transparent"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }, 
  "linter": {
    "rules": {
      "correctness": {
        "useUniqueElementIds": {
          "level": "error", 
          "options": {
            "excludedComponents": ["FormattedMessage"]
          }
        }
      },
      "suspicious": {
       "noShadowRestrictedNames": {
          "level": "off"
        }
      }
    }
  }
}
